    <UserControl.Resources>
        <!-- HierarchicalDataTemplate for IntervalMeter -->
        <HierarchicalDataTemplate DataType="{x:Type model:Entity}" ItemsSource="{Binding}">
        <TextBlock Text="{Binding Name}" />
    </HierarchicalDataTemplate>

    <!-- Style for TreeViewItem to display different icons based on EntityType -->
    <Style TargetType="TreeViewItem">
        <Setter Property="HeaderTemplate">
            <Setter.Value>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <Image Width="16" Height="16" Margin="0,0,5,0">
                            <Image.Style>
                                    <Style TargetType="Image">
                                        <Style.Triggers>
                                        <DataTrigger Binding="{Binding EntityType}" Value="{x:Static model:EntityType.SmartMeter}">
                                            <Setter Property="Source" Value="smart_meter_icon.png" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Image.Style>
                        </Image>
                        <TextBlock Text="{Binding Name}" />
                    </StackPanel>
                </DataTemplate>
            </Setter.Value>
        </Setter>
    </Style>
        </UserControl.Resources>

            <UserControl.DataContext>
        <viewModel:NetworkDisplayViewModel/>
    </UserControl.DataContext>

